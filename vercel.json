{
  "version": 2,
  "builds": [
    { "src": "/public/**/*", "use": "@now/static" },
    { "src": "/css/**/*", "use": "@now/static" },
    { "src": "/js/**/*", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
